
// Variables
// ============================================================================

@font-face
  font-family: "dapicons"
  src: url("dapicons.eot")
  src: url("dapicons.eot?#iefix") format("embedded-opentype"), url("dapicons.woff") format("woff"), url("dapicons.ttf") format("truetype"), url("dapicons.svg#dapicons") format("svg")
  font-weight: normal
  font-style: normal

$dapicons()
  font-family: "dapicons"
  speak: none
  -webkit-font-feature-settings: "liga", "dlig"
  -moz-font-feature-settings: "liga=1, dlig=1"
  -moz-font-feature-settings: "liga", "dlig"
  -ms-font-feature-settings: "liga", "dlig"
  -o-font-feature-settings: "liga", "dlig"
  font-feature-settings: "liga", "dlig"
  text-rendering: optimizeLegibility
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1
  -webkit-font-smoothing: antialiased

$width-avatar: 120px
$bgcolor-border: #e4e4e4

// Elements
// ============================================================================

*, *::before, *::after
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 62.5%

body
  font-size: 1.6rem
  background-color: #ececec
  -webkit-text-size-adjust: 100%

img
  vertical-align: text-bottom

a
  text-decoration: none

h1, h2, h3, h4, h5, h6
  font-weight: normal
  margin: 0
  padding: 0

// Page block
// ============================================================================

.Page
  padding-top: 14rem
  position: relative
  width: 100%
  z-index: 0

  &::before, &::after
    position: absolute
    top: 0
    left: 50%
    display: block
    width: 10px
    height: 100%
    content: ""
    transform: translateX(-50%)
    background-color: $bgcolor-border

  &::before
    margin-left: -36px

  &::after
    margin-left: 36px

// Contaienr block
// ============================================================================

.Container
  position: relative
  z-index: 1

// Banner block
// ============================================================================

.Banner
  position: relative
  margin-bottom: 7rem
  text-align: center

// Avatar block
// ============================================================================

.Avatar
  background-color: $bgcolor-border
  border-radius: 100%
  display: block
  height: $width-avatar
  margin: 0 auto
  width: $width-avatar
  padding: 10px

.Avatar-image
  width: 100%
  border-radius: 100%
  opacity: 0.8

// LinkList block
// ============================================================================

.LinkList
  position: relative
  margin: 2rem auto 16rem
  text-align: center
  width: 58px

.LinkList-link
  $dapicons()
  display: block
  padding: 1.2rem
  font-size: 2.6rem
  color: #b6b6b6
