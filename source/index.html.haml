%header.banner
  = banner = capture_haml do
    %h1.banner__logo
      = content_tag(:object, data: image_path('logo_ruedapcom.svg'), width: 156, height: 200) do
        = image_tag('logo_ruedapcom.png', width: '156', height: '200', alt: 'ルエダップコム', title: 'ルエダップコム')
    .banner__avatar
      = image_tag('logo_ruedap.png', width: '100', height: '100', alt: 'ruedap', title: 'ruedap', class: 'banner__avatar-img')
    %ul.profile
      %li<>= link_to('twitter', 'https://twitter.com/ruedap', target: '_blank', class: 'profile__icon')
      %li<>= link_to('github', 'https://github.com/ruedap', target: '_blank', class: 'profile__icon')
      %li<>= link_to('mail', 'mailto:ruedap@ruedap.com', class: 'profile__icon')
      %li<>= link_to('wishlist', 'http://www.amazon.co.jp/wishlist/1NPRE7894OBKR/?sort=priority', target: '_blank', class: 'profile__icon')

%section.blog
  %h1.blog__heading
    = content_tag(:object, data: image_path('section_blog.svg')) do
      ブログ
  %article
    = link_to('http://blog.ruedap.com') do
      = image_tag('logo_einstein.svg', class: 'blog__logo-img')

%section.products
  %h1.products__heading
    = content_tag(:object, data: image_path('section_products.svg')) do
      プロダクツ

  %article.product
    %h1.product__heading Font Awesome Workflow for Alfred 2
    .product__thumbnail
      = link_to('https://github.com/ruedap/alfred2-font-awesome-workflow', target: '_blank') do
